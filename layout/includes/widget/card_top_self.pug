if site.data.widget && site.data.widget.top
  each item in site.data.widget.top
    .card-widget(class=item.class_name id=item.id_name)
      .item-headline
        i(class=item.icon)
        if item.name_link
          a(href=item.name_link style="color:inherit;")
            span=item.name
        else
          span=item.name
      .item-content
        !=item.html