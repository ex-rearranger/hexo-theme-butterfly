if theme.aside.card_tags.enable
  if site.tags.length
    each langPrefix, lang in langPrefices
      .card-widget.card-tags(lang-type='relative' language=lang)
        .item-headline
          i.fas.fa-tags
          span= _p(langPrefix+'aside.card_tags')

        - let { limit, orderby, order } = theme.aside.card_tags
        - limit = limit === 0 ? 0 : limit || 40

        if theme.aside.card_tags.color
          .card-tag-cloud!= tagcloud({lang: lang, source: site.tags, orderby: orderby, order: order, min_font: 0.9, max_font: 1, limit: limit, unit: 'rem', color: true, start_color: '#999', end_color: '#99a9bf'})
        else
          .card-tag-cloud!= tagcloud({lang: lang, source: site.tags, orderby: orderby, order: order, min_font: 0.9, max_font: 1, amount: limit, unit: 'rem'})
